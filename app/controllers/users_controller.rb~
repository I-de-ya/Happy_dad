# coding: utf-8
class UsersController < ApplicationController
	
	before_filter :authenticate, :only => [:index, :show, :edit, :update, :destroy, :delete]
	before_filter :correct_user, :only => [:edit, :update]
	before_filter :admin_user,   :only => :destroy
	
	def index
		@title = "All users"
		@users = User.all
	end

	def show
		@user = User.find(params[:id])
		@title = @user.name
	end

	def new
		@title = "Sign up"
		@user = User.new
	end
	
	def create
		@user = User.new(params[:user])
		if @user.save
			sign_in @user
			redirect_to @user
			flash[:success] = "Добро пожаловать в ДЕКАНТЕР"
		else
			@title = "Sign up"
			render 'new'
		end
	end
	
	def edit
		@user = User.find(params[:id])
		@title = "Edit user"
	end
	
	def update
		@user = User.find(params[:id])
		if @user.update_attributes(params[:user])
			flash[:success] = "Профиль создан"
			redirect_to @user
		else
			@title = "Edit user"
			render 'edit'
		end
	end
	
	def destroy
		User.find(params[:id]).destroy
		flash[:success] = "Юзер удален"
		redirect_to users_path
	end
	
	private
	
	def correct_user
		@user = User.find(params[:id])
		redirect_to(root_path) unless current_user?(@user)
	end
	
end
